<br>
<div class="container col-md-3" ></div>
<div class="container col-md-6" style="vertical-align: center;">

<div class="panel " >
 <span><%= link_to '', home_path,:title => 'Fechar', :method => :get , :class =>"btn btn-danger btn3d fa fa-times pull-right"%> <%= link_to '', new_coord_path(admin_id: params[:admin_id]),:title => 'Adicionar Curso', :method => :get , :class =>"btn btn-success btn3d fa fa-plus pull-right"%> </span>
<div class="panel-heading"><strong> Cursos Gerenciados </strong></div>

<div class="panel-body">

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover fixed">
  <thead>
    <tr>
    <th>Descrição</th>
    <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @coords.each do |coord| %>
      <tr>
        <td> <%= coord.curso.nome %></td>
        <td style="text-align: center;" colspan="4"><div class="btn-group icons">
        <%= link_to '',  edit_coord_path(coord, admin_id: coord.admin.id), title: "Editar", :class =>"btn btn-success fa fa-pencil btn3d" %>
        <%= link_to '', coord, method: :delete, data: { confirm: 'Deseja realmente deletar?' }, title: "Deletar", :class =>"btn btn-danger fa fa-trash btn3d" %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

 <div class="form-group col-md-12">
    <div align="center">
      <div class="btn-group icons">
        <br>
        <%= link_to 'Voltar', :back, class: 'btn  btn-danger btn3d'  %>
      </div>
    </div>
 </div>

<div align="center">
<%= will_paginate @coords, renderer: BootstrapPagination::Rails, color: "green", next_label: ">>", previous_label: "<<"   %>
</div>
</div>
</div>

</div>
</div>
