<div class="panel collapse" id=collapse1> 
<div class="panel-heading"><strong> Consulta  </strong></div>
<div class="panel-body">
<%= form_tag( '/oportunidades', method: "get",  :class => "form-inline") do %>

<%if not empressa_signed_in? %>
<div class="col-md-2">
    <%= label_tag(:pinstituicao, "Empresa:") %>
    <%= text_field_tag( :pinstituicao, @pinstituicao,  placeholder: 'Digite uma Empresa', size: 20, class: 'form-control', style: 'width: 100%', id: 'texto') %>
</div>
<%else%>
<%= hidden_field_tag(:empresa_id)%>
<script type="text/javascript">
    $('#empresa_id').val(<%=current_empressa.empresa_id%>);
</script>
<% end %>

<div class="col-md-2"> 
    <%= label_tag(:pcurso, "Formação :") %>
    <%= select_tag :pcurso, options_for_select(Titulacao.all.map {|m| [m.titulo]}.sort,  selected: params[:pcurso]), prompt: 'Selecione um curso', class: 'form-control', style: 'width: 100%' %>
</div>
<div class="col-md-2">
    <%= label_tag(:pcargo, "Cargo:") %>
    <%= text_field_tag( :pcargo, @pcargo, placeholder: 'Digite um cargo', class: 'form-control', style: 'width: 100%') %>
</div>
<div class="col-md-2">
    <%= label_tag(:pinicio, "Início:") %> 
    <%= date_field_tag( :pinicio, @pinicio, class: 'form-control', style: 'width: 100%') %>
</div>
<div class="col-md-2">
    <%= label_tag(:pfim, "Fim:") %>
    <%= date_field_tag( :pfim, @pfim, class: 'form-control', style: 'width: 100%') %>
</div>
<div class="col-md-1">
    <%= label_tag(:psituacao, "Situação:") %>
    <%= select_tag :psituacao, options_for_select([['Vigente','V'],['Cancelada','C'],['Encerrada','E'],['Expirada','X']]), selected:params[:psituacao], class: 'form-control', style: 'width:132%' %>
</div>
<div class="col-md-1">
    &nbsp&nbsp
    <%= submit_tag "Pesquisar" , class: "btn btn-success", style: 'position: relative; bottom: -5px;' %>
</div>
<% end %>
</div>
</div>