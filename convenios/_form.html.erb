<br><br><br><br><br><br>
<%= form_for(convenio) do |f| %>
  <% if convenio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(convenio.errors.count, "error") %> prohibited this convenio from being saved:</h2>

      <ul>
      <% convenio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


        
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="col-md-12">
<div class="container">
<div class="panel"><%= link_to '', :back,:title => 'Fechar', :method => :get , :class =>"btn btn-danger btn3d fa fa-times pull-right"%> 
<div class="panel-heading"><strong>Cadastro de Egresso</strong>

</div>
<div class="panel-body">
<div class="table-responsive">

<% if @convenio.cnpj_id? %>

<form class="form-horizontal ">
   <div class="form-group" > 
      <%= f.label :cnpj_id , "CNPJ"%>
      <%= f.select :cnpj_id, options_for_select(Empresa.where(cnpj: @convenio.cnpj.cnpj).map{|m| [m.cnpj,m.id]},f.object.cnpj_id), {disabled: true}, class: 'selectpicker form-control' %>
  </div>
<% else %>
    <div class="form-group"> 
        <%= f.label :cnpj_id , "CNPJ"%>
        <%= f.select :cnpj_id, options_for_select(Empresa.all.map{|m| [m.cnpj,m.id]},f.object.cnpj_id), {disabled: true}, class: 'selectpicker form-control' %>
    </div>
<%end%>


  <div class="form-group">
    <%= f.label :data_inicio,  class: 'label-control' %>
    <%= f.date_field :data_inicio ,  class: 'form-control'  %>
  </div>


  <div class="form-group">
    <%= f.label :data_fim,  class: 'label-control' %>
    <%= f.date_field :data_fim,  class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :observacao %>
    <%= f.text_field :observacao,  class: 'form-control' %>
  </div>

</div> 
</div>
</div>
<div align="center">
    <div class="btn-group icons">
      <%= link_to 'Voltar', convenios_path, class: 'btn  btn-danger btn3d'  %>
      <%= button_tag(type: 'submit', class: "btn btn-success btn3d") do %> Salvar <% end %>
    </div>
</div>

<% end %>

</div>
</form>


