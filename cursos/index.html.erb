<br>
<div class="col-md-3"></div>
<div class="container col-md-6" >

<% if current_admin.try(:super?) || current_admin.email =="registro@iff.edu.br" %>
<%= render 'formbusca'%>
<%end%>

<div class="panel " >

  <span><%= link_to '', home_path,:title => 'Fechar', :method => :get , :class =>"btn btn-danger btn3d fa fa-times pull-right"%><%= link_to' Novo Curso', new_curso_path,:method => :post , :class =>"btn btn-success btn3d fa fa-plus-square pull-right"%> <a class="btn btn-sm btn-success btn3d pull-right" data-toggle="collapse" href="#collapse1" aria-expanded="false" aria-controls="collapseExample">
    <i class="fa fa-search" title="Pesquisar"></i>
  </a> </span>

<div class="panel-heading"><strong> Lista de Cursos </strong></div>

<div class="panel-body">

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover fixed">

  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.nome %></td>
        <td style="text-align: center;"><%= link_to '',  edit_curso_path(curso), title: "Editar", :class =>"btn btn-success fa fa-pencil btn3d" %>
          <%= link_to '', curso, method: :delete, data: { confirm: 'Deseja realmente deletar?' }, title: "Deletar", :class =>"btn btn-danger fa fa-trash btn3d" %>
</td>
       
      </tr>
    <% end %>
  </tbody>
</table>

</div>


<div align="center">
<%= will_paginate @cursos, renderer: BootstrapPagination::Rails, color: "green", inner_window: 2, outer_window: 1, next_label: ">>", previous_label: "<<"   %>
</div>
</div>
</div>
</div>