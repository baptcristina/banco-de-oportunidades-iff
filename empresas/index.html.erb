<br>
<div class="container col-md-12" >
<% if current_admin.try(:super?) %>
<%= render 'formbusca'%>
<%end%>


<div class="panel " >
 <span><%= link_to '', home_path,:title => 'Fechar', :method => :get , :class =>"btn btn-danger btn3d fa fa-times pull-right"%> <%= link_to' Registrar Empresa', new_empressa_registration_path,  :class =>"btn btn-success btn3d fa fa-briefcase pull-right"%> <a class="btn btn-sm btn-success btn3d pull-right" title="Pesquisar" data-toggle="collapse" href="#collapse1" aria-expanded="false" aria-controls="collapseExample">
    <i class="fa fa-search" title="Pesquisar"></i>
  </a>  </span>
<div class="panel-heading"><strong> Empresas </strong></div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover fixed">
        <col width="190px" />
        <col width="430px" />        
        <col width="230px" />
        <col width="230px" />


      <thead>
        <tr>
          <th>CNPJ</th>
          <th>Raz√£o Social</th>
          <th>E-mail</th>

          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @empresas.each do |empresa| %>
          <tr>
            <td><%= empresa.cnpj %></td>
            <td><%= empresa.razao_social %></td>
            <td><%= empresa.email %></td>
              <td align="center" colspan="4">
            <div class="btn-group icons">
              <% if current_admin.try(:super?) %>  
                <%= link_to '', empresa, title: "Visualizar", :class =>"btn btn-default fa fa-eye btn3d" %>  
                <%= link_to '', contatos_path( empresa_id: empresa.id, cnpj: empresa.cnpj), title: "Contatos", :class =>"btn btn-primary fa fa-phone btn3d" %>
              <%end%>
              <%= link_to '',  edit_empresa_path(empresa),  title: "Editar", :class =>"btn btn-success fa fa-pencil btn3d" %>
              <%= link_to '', empresa, method: :delete, data: { confirm: 'Deseja realmente deletar?' }, title: "Deletar", :class =>"btn btn-danger fa fa-trash btn3d" %>
            </div>
          </td>
        </tr>

        <%end%>
      </tbody>
    </table>
   </div>
  </div>  
<div align="center">
<%= will_paginate @empresa, renderer: BootstrapPagination::Rails, color: "green", next_label: ">>", previous_label: "<<"   %>
</div>
</div>
</div>